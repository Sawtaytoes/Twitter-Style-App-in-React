@charset 'UTF-8'
@require './includes/**/*'


//-------------------------------------------
// Video Container
//-------------------------------------------

.flex-video
	margin-left -rem(bubble-spacing)
	margin-right -rem(bubble-spacing)
	position relative
	height 0
	padding-top 0
	overflow hidden

	iframe
	object
	embed
	video
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	@media small-up
		margin-left 0
		margin-right 0

	@media print-only
		display none

.flex-video--standard
	padding-bottom 75%

.flex-video--wide
	padding-bottom 56.25%
